<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="425dp"
    android:background="@color/black"
    android:padding="5dp"
    android:layout_gravity="center">

    <Button
        android:id="@+id/btEx"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btExit"
        android:background="@color/colorDarkGreen"
        android:drawableRight="@drawable/ic_close_black_44dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDarkGreen">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="272dp"
            android:layout_height="273dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:layout_marginTop="-30dp"
            android:maxWidth="500dp"
            android:maxHeight="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/geekwars" />

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_above="@+id/txtWelcome2"
            android:layout_marginBottom="15dp"
            android:adjustViewBounds="true"
            android:fontFamily="@font/centurybold"
            android:scaleType="fitXY"
            android:text="@string/welcome1"
            android:textSize="18sp"
            android:textColor="@color/white" />


        <TextView
        android:id="@+id/txtWelcome2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:fontFamily="@font/centurybold"
        android:text="@string/welcome2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"
        android:textColor="@color/white" />

    </RelativeLayout>


</LinearLayout>