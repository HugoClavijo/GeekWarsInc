<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".GameActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/quit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btExit"
            android:background="@color/black"
            android:drawableRight="@drawable/ic_close_black_44dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/centurybold"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scoreTxt"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/centurybold"
                android:id="@+id/score_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textColor="@color/white"
                android:fontFamily="@font/centurybold"
                android:textSize="20sp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Which thing is alive?"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/white"
            android:fontFamily="@font/centurybold"
            android:id="@+id/question"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bird"
            android:background="@color/cyan_500"
            android:textColor="#fff"
            android:padding="8dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/centurybold"
            android:id="@+id/choice1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="door"
            android:background="@color/cyan_500"
            android:textColor="#fff"
            android:padding="8dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/centurybold"
            android:id="@+id/choice2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rock"
            android:background="@color/cyan_500"
            android:textColor="#fff"
            android:padding="8dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/centurybold"
            android:id="@+id/choice3"/>

        <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/exit"-->
            <!--android:background="@color/colorRed"-->
            <!--android:textColor="#fff"-->
            <!--android:padding="8dp"-->
            <!--android:layout_marginBottom="24dp"-->
            <!--android:fontFamily="@font/centurybold"-->
            <!--android:id="@+id/quit"/>-->
    </LinearLayout>

</ScrollView>